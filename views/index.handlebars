<div class="jumbotron text-center" style="margin-bottom:0">
  <h1>Massive Victorious Champion Burgers!</h1>
  <img src="/assets/img/hpybur.png" alt="Happy MVC Burger" width="150">
</div>

<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col burger">
      <h2>Not eaten yet!</h2>
      {{#each burgers}}
      {{#unless devoured}}
      <div class="row">
        <div class="col-sm-3">
          <button class="btn btn-success change-devoured" data-id="{{id}}" data-newdevoured=true>
            EAT ME!
          </button>
        </div>
        <div class="col-sm-9">
          <p>{{burger_name}}</p>
        </div>
      </div>
      {{/unless}}
      {{/each}}
      </ul>
    </div>
    <div class="col float-right burger">
      <h2>Eaten!</h2>
      {{#each burgers}}
      {{#if devoured}}
      <p class="gone">{{burger_name}}</p>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container" style="margin-top:30px">
  <div class="row">
    <div class="col burger askem">
      <h2>Go Ahead. Make My Day!</h2>
      <h2>Add an MVC Burger...</h2>
      <br>
      <form class="create-form">
        <div class="form-group">
          <label for="bu">MVC Burger Name:</label>
          <input type="text" id="bu" name="burger_name">
          <button class="btn btn-success" type="submit">Add MVC Burger</button>
        </div>
      </form>

    </div>
  </div>
</div>